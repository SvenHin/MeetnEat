<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationInfo">

    <Toolbar
        android:id="@+id/reservationinfo_toolbar"
        style="@style/Toolbar"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/ToolbarTitle"
            android:text="@string/res_info_title"
            />
    </Toolbar>

    <include
        android:id="@+id/nav_toolbar"
        layout="@layout/navtoolbar" />


    <TextView
        android:id="@+id/res_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/reservationinfo_toolbar"
        android:text="@string/res_add_restaurantname"
        style="@style/InfoHeader"
        />

    <EditText
        android:id="@+id/res_info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/res_name"
        style="@style/InfoEdit"
        />

    <TextView
        android:id="@+id/res_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/res_info_name"
        android:text="@string/res_add_date"
        style="@style/InfoHeader"

        />

    <EditText
        android:id="@+id/res_info_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/res_date"
        style="@style/InfoEdit"

        />


    <TextView
        android:id="@+id/res_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/res_info_date"
        android:text="@string/res_add_time"
        style="@style/InfoHeader"

        />

    <EditText
        android:id="@+id/res_info_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/res_time"
        style="@style/InfoEdit"

        />

    <TextView
        android:id="@+id/res_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/res_info_time"
        android:text="@string/res_add_people"
        style="@style/InfoHeader"

        />

    <EditText
        android:id="@+id/res_info_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/res_people"
        style="@style/InfoEdit"

        />




</android.support.constraint.ConstraintLayout>